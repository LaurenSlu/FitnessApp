@model IEnumerable<ApplicationModels.FitnessApp.Models.FitnessClass>

@{
    ViewData["Title"] = "Current Fitness Classes";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table table-hover" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FitnessClassType.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Capacity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Instructor.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FitnessClassType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfClass)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Capacity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Instructor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location.Name)
            </td>
            <td></td>
        </tr>
        }
    </tbody>
</table>
<div class="form-group">
    <a class="btn btn-primary" asp-action="Details" asp-route-id="-1">Details</a>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="-1">Edit</a>
    <a class="btn btn-danger" asp-action="Delete" asp-route-id="-1">Delete</a>
</div>
