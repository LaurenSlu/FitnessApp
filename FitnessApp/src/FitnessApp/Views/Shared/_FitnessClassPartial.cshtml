@model FitnessApp.Models.ApplicationViewModels.FitnessClassEditView

<div class="form-group">
    <label asp-for="FitnessClassType" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="FitnessClassType.Id" asp-items="Model.FitnessClassTypes" class="form-control"></select>
        <span asp-validation-for="FitnessClassType.Id" class="text-danger"/>
    </div>
</div>
<div class="form-group">
    <label asp-for="Capacity" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="DateOfClass" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input type="date" data-provide="datepicker" asp-for="DateOfClass" class="form-control" />
        <span asp-validation-for="DateOfClass" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="StartTime" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="StartTime" class="form-control" />
        <span asp-validation-for="StartTime" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="EndTime" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <input asp-for="EndTime" class="form-control" />
        <span asp-validation-for="EndTime" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Location" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Location.Id" asp-items="Model.Locations" class="form-control"></select>
        <span asp-validation-for="Location.Id" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <label asp-for="Instructor" class="col-md-2 control-label"></label>
    <div class="col-md-10">
        <select asp-for="Instructor.Id" asp-items="Model.Instructors" class="form-control"></select>
        <span asp-validation-for="Instructor.Id" class="text-danger" />
    </div>
</div>
<div class="form-group">
    <div class="col-md-offset-2 col-md-10">
        <div class="checkbox">
            <input asp-for="Status" />
            <label asp-for="Status"></label>
        </div>
    </div>
</div>
